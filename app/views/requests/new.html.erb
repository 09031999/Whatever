<% provide(:title, 'request') %>

	
	<div class="request-wrapper">
	  <div class="request-order-content">

	  	
	  	<div class="img"><%= link_to image_tag("audio1.jpg", width:"90px" ) %>
	  	  <span><%= @product.name %>><span>	
	  	  <p><%= @product.price %></p>	  	
	  	</div>
	    <div class="order-form">
	    <%= form_for [@product, @request] do |f| %>
	    <%= render 'shared/error_messages', object: @request %>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' , id: "name" %>

		<%= f.label :address %>
		<%= f.text_field :address, class: 'form-control' , id: "address" %>

		<%= f.label :phone %>
		<%= f.text_field :phone, class: 'form-control' , id: "phone" %>
		
		<div class="quantity-text">
		  <%= f.label :quantity %>
		  <%= f.number_field :quantity, class: 'form-control' , id: "quantity" %>
		</div>

		<div class="total">
			<b>Total Money :</b>
			<strong>1.000.000</strong>
		</div>
	
        <div class="request-content-text">
        	<a href="http://localhost:3000/pages/iems"> Back</a>       	
        </div>
        <div><%= f.submit "Order", id: "order" %></div>

        </div>
      </div>
    </div>


	<%end%>


	