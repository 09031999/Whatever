<%= form_for(@user) do |f| %>

	<%= render 'shared/error_messages', object: @user %>

	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-control' , id: "name" %>

	<%= f.label :email %>
	<%= f.email_field :email, class: 'form-control' , id: "email" %>

	<%= f.label :password %>
	<%= f.password_field :password, class: 'form-control' , id: "pwd" %>

	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation, class: 'form-control' , id: "name" %>

	<%= f.submit yield(:button_text), class: "submit" %>

<% end %>